import java.awt.*;
import java.awt.event.*;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;

import java.util.*;

public class GUI extends Frame implements ActionListener 
{
	JTextField fNameBox = new JTextField("Name", 20);
	JTextField lNameBox = new JTextField(20);
	JTextField phoneBox = new JTextField(10);
	JTextField departmentBox = new JTextField(50);
	Frame frame = new Frame();
	
	JButton submit = new JButton("Submit");
	JButton exit = new JButton("Exit");
	
	JLabel firstName = new JLabel("First Name");
	JLabel lastName = new JLabel("Last Name");
	JLabel phone = new JLabel("Phone Number");
	JLabel department = new JLabel("Department");
	
	
	public GUI()
	{
		setLayout(new BorderLayout());
		setTitle("New Employee");
		setSize(600, 600);
		
		
		frame.add(firstName, BorderLayout.CENTER);
		add(fNameBox, BorderLayout.CENTER);
		add(lastName, BorderLayout.CENTER);
		add(lNameBox, BorderLayout.CENTER);
		add(phone, BorderLayout.WEST);
		add(phoneBox, BorderLayout.WEST);
		add(department, BorderLayout.WEST);
		add(departmentBox, BorderLayout.WEST);
		add(submit, BorderLayout.SOUTH);
		add(exit, BorderLayout.SOUTH);
		
		setVisible(true);
	}

	@Override
	public void actionPerformed(ActionEvent arg0) {
		// TODO Auto-generated method stub
		
	}
	
	
	
	
	
	

}
